<aside class="p-4 my-4 border-s-4 border-gray-300 bg-gray-50 dark:border-gray-500 dark:bg-gray-800">
    <h3 class="mb-2 text-sm font-semibold uppercase tracking-wide text-slate-600">@Title</h3>
    <div class="relative pl-4">
        <span class="absolute left-0 top-0 h-full w-1 rounded bg-sky-500"></span>
        <p class="text-slate-800">
            @ChildContent
        </p>
    </div>
</aside>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string? Title { get; set; } = "Sitenote";
}